<html>

<head>

    <title>Trends</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css">

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.19/angular.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="js/angularApp.js"></script>

    <link rel="stylesheet" href="css/style.css">

</head>

<body ng-app="potatoNews">

    <div class="row">
        <div class="col-md-12">
            <ui-view></ui-view>
        </div>
    </div>



    <!-- HOME  -->
    <script type="text/ng-template" id="/home.html">
        <div class="page-header">
            <h1>Potato News</h1>
        </div>

        {{posts}}

        <div ng-repeat="post in posts | orderBy: '-votes'">
            <span class="glyphicon glyphicon-thumbs-up" ng-click="upvote(post)"></span>
            {{post.votes}}
            <span class="glyphicon glyphicon-thumbs-down" ng-click="downvote(post)"></span>


            <span style="font-size:20px;margin-left:10px">
                <a ng-show="post.link" href="{{post.link}}">
                    {{post.title}}
                </a>
                <span ng-hide="post.link">
                    {{post.title}}
                </span>
            </span>


            <span>
                <a href="#/comments/{{post._id}}">CommentsR</a>
                ({{post.comments.length}})
            </span>
        </div>

        <form ng-submit="addPost()" style="margin-top:30px">
            <h3>Add a new post:</h3>

            <div class="form-group">
                <input type="text" class="form-control" placeholder="Title" ng-model="title">
            </div>

            <div class="form-group">
                <input type="text" class="form-control" placeholder="Link" ng-model="link">
            </div>

            <button type="submit" class="btn btn-primary">Post</button>
        </form>
    </script>
    <!-- end of /home template -->







    <!-- TREND  -->
    <script type="text/ng-template" id="/trend.html">

        <div class="container">
        </div>
        <header class="my-header">
            <h1>Trenz</h1>
        </header>


        <div class="container">
            <div class="row clearfix">
                <div class="col-md-6 col-md-offset-3 column">
                    <form role="form">
                        <div class="form-group">
                            <label for="searchInput"></label>
                            <input type="text" class="form-control" id="searchInput" value="">
                        </div>

                    </form>
                </div>
            </div>
        </div>




        <div class="container">
            <div class="row ">
                <ul class="col-md-3 nobullets"> <h4>World-wide </h4>
                   <li class="trendli" ng-repeat="trend in trends | limitTo: '104' | filter:'WW'">

                    <a href=#>
                    {{trend.trendName}}
                    </a>

          <!-- <div>  _________________________ {{trend}} </div> -->
                    </li>
                </ul>


            <ul class="col-md-3 nobullets"> <h4>US </h4>
                   <li class="trendli" ng-repeat="trend in trends | limitTo: '104' | filter:'US'">
                    <a href=#>
                    {{trend.trendName}}
                    </a>
                    </li>
                </ul>

            <ul class="col-md-3 nobullets"> <h4>Asia </h4>
                   <li class="trendli" ng-repeat="trend in trends | limitTo: '104' | filter:'ASIA'">
                    <a href=#>
                    {{trend.trendName}}
                    </a>
                    </li>
                </ul>


            <ul class="col-md-3 nobullets"> <h4>Europe </h4>
                   <li class="trendli" ng-repeat="trend in trends | limitTo: '14' | filter:'EU'">
                    <a href=#>
                    {{trend.trendName}}
                    </a>
                    </li>
                </ul>

            </div>
        </div>



        <hr>




    </script>
    <!-- end of /trend template -->










    <!-- POSTS  -->
    <script type="text/ng-template" id="/comments.html">
        <h2>comments page</h2>
        <div class="page-header">
            <h3>
                <a ng-show="post.link" href="{{post.link}}">
                    {{post.title}}
                </a>
                <span ng-hide="post.link">
                    {{post.title}}
                </span>
            </h3>
        </div>

        <div ng-repeat="comment in post.comments | orderBy: '-votes'">
            <span class="glyphicon glyphicon-thumbs-up" ng-click="upvote(comment)"></span>
            {{comment.votes}}
            <span class="glyphicon glyphicon-thumbs-down" ng-click="downvote(comment)"></span>
            - by {{comment.author}}
            <span style="font-size:20px;margin-left:10px">
                {{comment.body}}
            </span>
        </div>

        <form ng-submit="addComment()" style="margin-top:30px">
            <h3>Add a new comment</h3>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Comment" ng-model="body">
            </div>
            <button type="submit" class="btn btn-primary">Post to {{post.title}}</button>
        </form>
    </script>

</body>

</html>
